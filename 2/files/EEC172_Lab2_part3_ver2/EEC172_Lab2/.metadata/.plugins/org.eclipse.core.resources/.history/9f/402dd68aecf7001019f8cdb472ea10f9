// TODO Configure SPI port and use these libraries to implement
// an OLED test program. See SPI example program.

#include "oled_test.h"

#include "Adafruit_GFX.h"
#include "Adafruit_SSD1351.h"

//*****************************************************************************
//  function delays 3*ulCount cycles
static void delay(unsigned long ulCount){
    int i;
    do{
        ulCount--;
        for (i=0; i<65535; i++);
    }while(ulCount);
}

// OLED size
#define OLED_W 128
#define OLED_H 128



// Draw a ball at the center of the display
void drawBall(void){
    int x = OLED_W / 2;
    int y = OLED_H / 2;
    int r = 4;


    fillScreen(BLACK);

    // Draw filled circle
    fillCircle(x, y, r, BALL_COLOR);
}

void checkoffLoop(void){



    drawBall();

    while(1){

        delay(50);
    }
}




void checkoffLoop(){


}
