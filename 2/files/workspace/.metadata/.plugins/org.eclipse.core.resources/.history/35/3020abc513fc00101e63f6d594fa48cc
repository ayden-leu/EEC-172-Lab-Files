//*****************************************************************************
//
// Application Name     - SPI Demo
// Application Overview - The demo application focuses on showing the required 
//                        initialization sequence to enable the CC3200 SPI 
//                        module in full duplex 4-wire master and slave mode(s).
//
//*****************************************************************************


//*****************************************************************************
//
//! \addtogroup SPI_Demo
//! @{
//
//*****************************************************************************

// Standard includes
#include <string.h>

// Driverlib includes
#include "hw_types.h"
#include "hw_memmap.h"
#include "hw_common_reg.h"
#include "hw_ints.h"
#include "spi.h"
#include "rom.h"
#include "rom_map.h"
#include "utils.h"
#include "prcm.h"
#include "uart.h"
#include "interrupt.h"

// Common interface includes
#include "uart_if.h"
#include "pin_mux_config.h"



// new stuff
#include "Adafruit_SSD1351.h"
#include "Adafruit_GFX.h"
#include "oled_test.h"
#include "gpio.h"
#include "i2c_if.h"
#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>

#define APPLICATION_VERSION     "1.4.0"
#define SPI_IF_BIT_RATE  100000

// new stuff
#define INIT_MESSAGE   "Starting OLED screen program...\n\r"


//*****************************************************************************
//                 GLOBAL VARIABLES -- Start
//*****************************************************************************
#if defined(ccs)
extern void (* const g_pfnVectors[])(void);
#endif
#if defined(ewarm)
extern uVectorEntry __vector_table;
#endif
//*****************************************************************************
//                 GLOBAL VARIABLES -- End
//*****************************************************************************



// new functions
//  function delays 3*ulCount cycles
static void delay(unsigned long ulCount){
    int i;
    do{
        ulCount--;
        for (i=0; i<65535; i++);
    }while(ulCount);
}

#define BMA222_ADDR   0x18
#define REG_ACC_X     0x03
#define REG_ACC_Y     0x05

#define DEADZONE      4
#define MAX_STEP_PIXELS   7
#define FULL_TILT_COUNTS  64

// OLED size
#define OLED_WIDTH 128 // width
#define OLED_HEIGHT 128 // height

// Ball properties
#define INIT_BALL_RADIUS  3      // 0 = 1 pixel wide ball, 1 = 3 pixel wide, 2 = 5 pixels, etc.
#define BALL_COLOR   WHITE

// states
#define ON_FLOOR  0
#define JUMPING   1
#define FALLING   2

#define JUMP_THRESHOLD  30
#define MAX_RADIUS   10
#define ACCELERATION_CHANGE   1
#define BUMP_DAMP_MULTIPLIER   (1/2)


static int ball_x, ball_y, ball_ax, ball_ay;
static int old_x, old_y, old_ax, old_ay;

static int accel_x, accel_y;
static int old_accel_x, old_accel_y;

unsigned short currentRadius = INIT_BALL_RADIUS;
unsigned short oldRadius = INIT_BALL_RADIUS;
unsigned short growRate = 2;
unsigned short ballState = ON_FLOOR;

// helper function
static int clamp_int(int v, int lo, int hi){
    if (v < lo) return lo;
    if (v > hi) return hi;
    return v;
}

static void clampBall(int radius){
    if(ball_x > (OLED_WIDTH  - 1) - radius){
        ball_x = (OLED_WIDTH  - 1) - radius;
        ball_ax = -ball_ax * BUMP_DAMP_MULTIPLIER;
    }
    else if(ball_x < radius){
        ball_x = radius;
        ball_ax = -ball_ax * BUMP_DAMP_MULTIPLIER;
    }

    if(ball_y > (OLED_HEIGHT  - 1) - radius){
        ball_y = (OLED_WIDTH  - 1) - radius;
        ball_ay = -ball_ay * BUMP_DAMP_MULTIPLIER;
    }
    else if(ball_y < radius){
        ball_y = radius;
        ball_ay = -ball_ay * BUMP_DAMP_MULTIPLIER;
    }

    // simpler version
//    ball_x = clamp_int(ball_x, radius, (OLED_WIDTH  - 1) - radius);
//    ball_y = clamp_int(ball_y, radius, (OLED_HEIGHT - 1) - radius);
}


static void eraseBall(int x, int y, int radius){
    fillCircle(x, y, radius, BLACK);
}
static void drawBall(int x, int y, int radius){
    fillCircle(x, y, radius, BALL_COLOR);
}

// Reading accelerometer data
static signed char bma222_read_s8(unsigned char reg){
    unsigned char raw = 0;
    I2C_IF_Write(BMA222_ADDR, &reg, 1, 0);
    I2C_IF_Read(BMA222_ADDR, &raw, 1);
    return (signed char)raw;
}

// Convert tilt to movement speed
static int accel_to_step(int a){
    int sign = 1;
    if (a < 0) { sign = -1; a = -a; }

    if (a <= DEADZONE) return 0;

    a -= DEADZONE;

    if (a > FULL_TILT_COUNTS) a = FULL_TILT_COUNTS;

    int step = 1 + (a * (MAX_STEP_PIXELS - 1)) / FULL_TILT_COUNTS;

    return sign * step;
}

// Move left or right using X axis
void ballRoll(void){
    old_ax = ball_ax;
    old_accel_x = accel_x;
    accel_x = (int)bma222_read_s8(REG_ACC_X);

    if(ball_ax > accel_x){
        ball_ax -= ACCELERATION_CHANGE;
    }
    else if(ball_ax < accel_x){
        ball_ax += ACCELERATION_CHANGE;
    }

    int dx = accel_to_step(ball_ax);
    ball_x -= dx;
}

// Move up or down using Y axis
void ballPitch(void){
    old_ay = ball_ay;
    old_accel_y = accel_y;
    accel_y = (int)bma222_read_s8(REG_ACC_Y);

    if(ball_ay > accel_y){
        ball_ay -= ACCELERATION_CHANGE;
    }
    else if(ball_ay < accel_y){
        ball_ay += ACCELERATION_CHANGE;
    }

    int dy = accel_to_step(ball_ay);
    ball_y += dy;
}

void increaseRadius(void){
    oldRadius = currentRadius;
    currentRadius += growRate;
}
void decreaseRadius(void){
    oldRadius = currentRadius;
    currentRadius -= growRate;
}

void handleState(void){
    switch(ballState){
        case ON_FLOOR:
            if(abs(accel_y - old_accel_y) > JUMP_THRESHOLD && ballState == ON_FLOOR){
//                char accel[20];
//                sprintf(accel, "%d", abs(ay - old_ay));
//
//                Message("jumping!  change in acceleration: ");
//                Message(accel);
//                Message("\n\r");

                ballState = JUMPING;
            }
            break;
        case JUMPING:
            increaseRadius();
            if(currentRadius > MAX_RADIUS){
                ballState = FALLING;
            }
            break;
        case FALLING:
            decreaseRadius();
            if((currentRadius - growRate) < INIT_BALL_RADIUS){
                ballState = ON_FLOOR;
                currentRadius = INIT_BALL_RADIUS;
            }
            break;
    }
}

void initScreen(void){
    ball_x = OLED_WIDTH / 2;
    ball_y = OLED_HEIGHT / 2;

    old_x = ball_x;
    old_y = ball_y;

    // Draw initial ball
    fillScreen(BLACK);
    drawBall(ball_x, ball_y, currentRadius);
}

void updateBallPosition(void){
    // Save old position
    old_x = ball_x;
    old_y = ball_y;

    // Update position from accelerometer
    ballRoll();
    ballPitch();
    clampBall(currentRadius);

    // Only redraw if position changed
    if (ball_x != old_x || ball_y != old_y){
        eraseBall(old_x, old_y, oldRadius);
        drawBall(ball_x, ball_y, currentRadius);
    }

    // Max speed
//    delay(5);
}


static void oledStuff(){
    Message(INIT_MESSAGE);
    initScreen();

    while(1){
//        Message("Hi!");
//        labupdateBallPosition();
        handleState();
        updateBallPosition();
    }
}



//*****************************************************************************
//
//! Board Initialization & Configuration
//!
//! \param  None
//!
//! \return None
//
//*****************************************************************************
static void
BoardInit(void)
{
/* In case of TI-RTOS vector table is initialize by OS itself */
#ifndef USE_TIRTOS
  //
  // Set vector table base
  //
#if defined(ccs)
    MAP_IntVTableBaseSet((unsigned long)&g_pfnVectors[0]);
#endif
#if defined(ewarm)
    MAP_IntVTableBaseSet((unsigned long)&__vector_table);
#endif
#endif
    //
    // Enable Processor
    //
    MAP_IntMasterEnable();
    MAP_IntEnable(FAULT_SYSTICK);

    PRCMCC3200MCUInit();
}

//*****************************************************************************
//
//! Main function for spi demo application
//!
//! \param none
//!
//! \return None.
//
//*****************************************************************************
void main()
{
    //
    // Initialize Board configurations
    //
    BoardInit();

    //
    // Muxing UART and SPI lines.
    //
    PinMuxConfig();

    //
    // Enable the SPI module clock
    //
    MAP_PRCMPeripheralClkEnable(PRCM_GSPI, PRCM_RUN_MODE_CLK);

    //
    // Initialising the Terminal.
    //
//    InitTerm();

    //
    // Clearing the Terminal.
    //
//    ClearTerm();

    // new stuff
    Message("Resetting peripheral PRCM...\n\r");
    MAP_PRCMPeripheralReset(PRCM_GSPI);

    Message("Initializing I2C...\n\r");
    I2C_IF_Open(I2C_MASTER_MODE_FST);

    Message("Resetting SPI...\n\r");
    MAP_SPIReset(GSPI_BASE);

    Message("Configuring SPI interface...\n\r");
    MAP_SPIConfigSetExpClk(GSPI_BASE,MAP_PRCMPeripheralClockGet(PRCM_GSPI),
                            SPI_IF_BIT_RATE,SPI_MODE_MASTER,SPI_SUB_MODE_0,
                             (SPI_SW_CTRL_CS |
                             SPI_4PIN_MODE |
                             SPI_TURBO_OFF |
                             SPI_CS_ACTIVEHIGH |
                             SPI_WL_8));

    Message("Enabling SPI...\n\r");
    MAP_SPIEnable(GSPI_BASE);

    Message("Initializing Adafruit...\n\r");
    Adafruit_Init();


    //
    // Display the Banner
    //
    Message("\n\n\n\r");
    Message("\t\t   ********************************************\n\r");
    Message("\t\t        CC3200 SPI Demo Application  \n\r");
    Message("\t\t   ********************************************\n\r");
    Message("\n\n\n\r");

    //
    // Reset the peripheral
    //
//    MAP_PRCMPeripheralReset(PRCM_GSPI);

    oledStuff();

}

